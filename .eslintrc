{
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "extends": [
        "eslint:recommended",
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            2,
            4
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "quotes": [
            2,
            "double",
            {"avoidEscape": true, "allowTemplateLiterals": true}
        ],
        "semi": [
            2,
            "always"
        ],
        "strict": [
            2,
            "safe"
        ],
        "no-console": [
            1,
            { "allow": ["warn", "error"] }
        ]
    }
}
